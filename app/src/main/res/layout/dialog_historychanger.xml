<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_date"
        android:fontFamily="@font/raleway_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="dd mm 'yy"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/history_person5_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Mi"
        app:layout_constraintStart_toEndOf="@+id/history_person4_btn"
        app:layout_constraintTop_toBottomOf="@+id/history_date" />

    <Button
        android:id="@+id/history_person4_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="He"
        app:layout_constraintStart_toEndOf="@+id/history_person3_btn"
        app:layout_constraintTop_toBottomOf="@+id/history_date" />

    <Button
        android:id="@+id/history_person3_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Em"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_date" />

    <Button
        android:id="@+id/history_person2_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Br"
        app:layout_constraintEnd_toStartOf="@+id/history_person3_btn"
        app:layout_constraintTop_toBottomOf="@+id/history_date" />

    <Button
        android:id="@+id/history_person1_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:layout_width="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="An"
        app:layout_constraintEnd_toStartOf="@+id/history_person2_btn"
        app:layout_constraintTop_toBottomOf="@+id/history_date" />
</android.support.constraint.ConstraintLayout>