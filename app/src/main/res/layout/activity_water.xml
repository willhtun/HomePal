<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="willhtun.homepal.Water">

    <ImageView
        android:id="@+id/home_banner"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_banner" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/josefinsans_regular"
        android:text="Water"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_banner"
        app:layout_constraintEnd_toEndOf="@+id/home_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_banner" />

    <TextView
        android:id="@+id/water_dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/josefinsans_regular"
        android:gravity="right|top"
        android:text="Due: mm/dd"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner" />


    <ImageView
        android:id="@+id/water_line0"
        android:layout_width="0dp"
        android:layout_height="0.75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_dueDate"
        app:srcCompat="@drawable/home_gradientline" />

    <ImageView
        android:id="@+id/water_line1"
        android:layout_width="0dp"
        android:layout_height="0.75dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/water_pricebox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_gradientline" />

    <ImageView
        android:id="@+id/water_payBtn"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/generic_paybutton" />

    <TextView
        android:id="@+id/water_payBtn_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/josefinsans_regular"
        android:gravity="center_vertical"
        android:text="PAY"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/water_payBtn"
        app:layout_constraintEnd_toEndOf="@+id/water_payBtn"
        app:layout_constraintStart_toStartOf="@+id/water_payBtn"
        app:layout_constraintTop_toTopOf="@+id/water_payBtn" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/water_payButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/water_payBtn_text">

        <ImageView
            android:id="@+id/water_person1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person2"
            app:layout_constraintEnd_toStartOf="@+id/water_person2"
            app:layout_constraintTop_toTopOf="@+id/water_person2"
            app:srcCompat="@drawable/generic_personpaybutton" />

        <TextView
            android:id="@+id/water_person1_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center_vertical"
            android:text="An"
            android:textColor="@android:color/darker_gray"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person1"
            app:layout_constraintEnd_toEndOf="@+id/water_person1"
            app:layout_constraintStart_toStartOf="@+id/water_person1"
            app:layout_constraintTop_toTopOf="@+id/water_person1" />

        <ImageView
            android:id="@+id/water_person2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person3"
            app:layout_constraintEnd_toStartOf="@+id/water_person3"
            app:layout_constraintTop_toTopOf="@+id/water_person3"
            app:srcCompat="@drawable/generic_personpaybutton" />

        <TextView
            android:id="@+id/water_person2_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center_vertical"
            android:text="Br"
            android:textColor="@android:color/darker_gray"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person2"
            app:layout_constraintEnd_toEndOf="@+id/water_person2"
            app:layout_constraintStart_toStartOf="@+id/water_person2"
            app:layout_constraintTop_toTopOf="@+id/water_person2" />

        <ImageView
            android:id="@+id/water_person3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/generic_personpaybutton" />

        <TextView
            android:id="@+id/water_person3_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center_vertical"
            android:text="Em"
            android:textColor="@android:color/darker_gray"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person3"
            app:layout_constraintEnd_toEndOf="@+id/water_person3"
            app:layout_constraintStart_toStartOf="@+id/water_person3"
            app:layout_constraintTop_toTopOf="@+id/water_person3" />

        <ImageView
            android:id="@+id/water_person4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person3"
            app:layout_constraintStart_toEndOf="@+id/water_person3"
            app:layout_constraintTop_toTopOf="@+id/water_person3"
            app:srcCompat="@drawable/generic_personpaybutton" />

        <TextView
            android:id="@+id/water_person4_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center_vertical"
            android:text="He"
            android:textColor="@android:color/darker_gray"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person4"
            app:layout_constraintEnd_toEndOf="@+id/water_person4"
            app:layout_constraintStart_toStartOf="@+id/water_person4"
            app:layout_constraintTop_toTopOf="@+id/water_person4" />

        <ImageView
            android:id="@+id/water_person5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person4"
            app:layout_constraintStart_toEndOf="@+id/water_person4"
            app:layout_constraintTop_toTopOf="@+id/water_person4"
            app:srcCompat="@drawable/generic_personpaybutton" />

        <TextView
            android:id="@+id/water_person5_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center_vertical"
            android:text="Mi"
            android:textColor="@android:color/darker_gray"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/water_person5"
            app:layout_constraintEnd_toEndOf="@+id/water_person5"
            app:layout_constraintStart_toStartOf="@+id/water_person5"
            app:layout_constraintTop_toTopOf="@+id/water_person5" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toTopOf="@+id/water_line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_line0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/water_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="bottom|center_vertical"
                android:orientation="vertical"
                android:textAlignment="center">

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/water_pricebox"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:onClick="show_pricePicker"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/water_payButtonsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/generic_pricebox" />

    <TextView
        android:id="@+id/water_priceboxtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefinsans_regular"
        android:text="$xx.xx"
        app:layout_constraintBottom_toBottomOf="@+id/water_pricebox"
        app:layout_constraintEnd_toEndOf="@+id/water_pricebox"
        app:layout_constraintStart_toStartOf="@+id/water_pricebox"
        app:layout_constraintTop_toTopOf="@+id/water_pricebox" />

</android.support.constraint.ConstraintLayout>
